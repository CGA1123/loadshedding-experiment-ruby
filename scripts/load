#!/bin/bash

APP=${1}
CLIENT_TIMEOUT=2000

function trial() {
  local time=${1}
  local workers=${2}
  local percent=${3}
  local label="workers-${workers}-percent-${percent}"

  echo "Running ${name} for ${time} with ${workers} workers..."
  hey \
    -H "X-Client-Timeout-Ms: ${CLIENT_TIMEOUT}" \
    -c ${workers} \
    -z ${time} \
    -t 2 \
    "https://${APP}.herokuapp.com?percent=${percent}&label=${label}"
  echo "Done..."
}

function loadshed() {
  printf "setting 'LOAD_SHED=${1}' ..."
  heroku config:set LOAD_SHED=${1} --app ${APP}
  printf "grace period... "
  sleep 30
  echo "done."
}

function trials() {
  trial "60s" "10" 0

  sleep 20

  trial "60s" "10" 1

  sleep 20

  trial "60s" "10" 5

  sleep 20

  trial "60s" "10" 10

  sleep 20

  trial "60s" "10" 15
}

loadshed 0

trials

loadshed 1

trials
