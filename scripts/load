#!/bin/bash

APP=${1}
URL=${2}
CLIENT_TIMEOUT=2000

function trial() {
  local time=${1}
  local workers=${2}
  local percent=${3}
  local label="percent-$(printf "%02d" ${percent})"

  echo "Running ${name} for ${time} with ${workers} workers..."
  hey \
    -H "X-Client-Timeout-Ms: ${CLIENT_TIMEOUT}" \
    -c ${workers} \
    -z ${time} \
    -t 2 \
    "https://${URL}.herokuapp.com?percent=${percent}&label=${label}"
  echo "Done..."
}

function loadshed() {
  printf "setting 'LOAD_SHED=${1}' ..."
  heroku config:set LOAD_SHED=${1} --app ${APP}
  printf "grace period... "
  sleep 30
  echo "done."
}

function trials() {
  trial "60s" "48" 0

  sleep 20

  trial "60s" "48" 1

  sleep 20

  trial "60s" "48" 2

  sleep 20

  trial "60s" "48" 3

  sleep 20

  trial "60s" "48" 5

  sleep 20

  trial "60s" "48" 10
}

loadshed 0

trials

loadshed 1

trials
